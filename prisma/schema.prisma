generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model User {
  id            Int            @id @default(autoincrement())
  name          String         @unique @db.VarChar(191) // Sebagai Username Login
  password      String         @db.VarChar(191)
  role          String         @default("ADMIN") @db.VarChar(50)
  createdAt     DateTime       @default(now())
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique @db.VarChar(191)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

//UNTUK TABEL PROFILE
model Profile {
  id          Int     @id @default(autoincrement())
  name        String
  description String  @db.Text
  logo        String? 
}

//UNTUK TABEL ARTIKEL
model Article {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(191)
  description String   @db.Text
  image       String?  // Untuk menyimpan nama file gambar
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

//UNTUK TABEL PRODUCT DAN CATEGORY PRODUCT
model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(100) // 100 aman
  slug      String    @unique @db.VarChar(191) // Ubah dari 255 ke 191
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(191)
  slug        String   @unique @db.VarChar(191) // Ubah dari 255 ke 191
  description String   @db.Text
  link        String?  @db.VarChar(191)
  image       String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}

//UNTUK TABEL MEMBER
model Member {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(191)
  image     String   @db.VarChar(191)
}